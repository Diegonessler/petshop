<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title><%= title %></title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            border: 1px solid #000000;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #5c5c5c;
        }
        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px;
        }
        header ul {
            list-style: none;
            margin: 0;
            padding: 0;
        }
        header ul li {
            display: inline;
            margin-left: 10px;
        }
        header ul li a {
            text-decoration: none;
            color: #333;
        }
        .mensagem {
            color: green;
            font-weight: bold;
            margin: 10px 0;
        }
        .erro {
            color: red;
            font-weight: bold;
            margin: 10px 0;
        }
        .delete-btn {
            background-color: #ff4444;
            color: rgb(0, 0, 0);
            border: none;
            padding: 5px 10px;
            cursor: pointer;
            border-radius: 3px;
        }
        .delete-btn:hover {
            background-color: #cc0000;
        }
    </style>
</head>
<body>
    <header>
        <div id="title">
            <h1>Lista de Clientes</h1>
        </div>
        <ul>
            <a href="/"><li>Cadastro</li></a>
        </ul>
    </header>
    <main>
        <% if (typeof mensagem !== 'undefined' && mensagem) { %>
            <div class="mensagem <%= mensagem.includes('Erro') ? 'erro' : '' %>"><%= mensagem %></div>
        <% } %>
    
        <% if (clientes && clientes.length > 0) { %>
            <!-- A MENSAGEM ESTÁ AGORA ACIMA DA TABELA -->
            <table>
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Email</th>
                        <th>Telefone</th>
                        <th>CPF</th>
                        <th>Endereço</th>
                        <th>Nome Animal</th>
                        <th>Raça</th>
                        <th>Valor</th>
                        <th>Observação</th>
                        <th>Plano</th>
                        <th>Ação</th>
                    </tr>
                </thead>
                <tbody>
                    <% clientes.forEach(cliente => { %>
                        <tr>
                            <td><%= cliente.nome %></td>
                            <td><%= cliente.email %></td>
                            <td><%= cliente.telefone || '-' %></td>
                            <td><%= cliente.cpf %></td>
                            <td><%= cliente.endereco || '-' %></td>
                            <td><%= cliente.animal || '-' %></td>
                            <td><%= cliente.raca || '-' %></td>
                            <td><%= cliente.valor || '-' %></td>
                            <td><%= cliente.observacao || '-' %></td>
                            <td><%= cliente.e_plano ? 'Sim' : 'Não' %></td>
                            <td>
                                <form method="POST" action="/deletar" style="display:inline;">
                                    <input type="hidden" name="id" value="<%= cliente.id %>">
                                    <button type="submit" class="delete-btn" onclick="return confirm('Tem certeza que deseja excluir este cliente?')">Excluir</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p>Nenhum cliente cadastrado.</p>
        <% } %>
    </main>
    
</body>
</html>
